<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Nova Reserva</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">

  <!-- Navbar -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <a href="/inicio" class="inline-flex items-center">
              <img src="../assets/logo_azul.png" alt="Logo" class="h-8 w-auto">
            </a>
          </div>
          <div class="hidden md:ml-8 md:flex md:space-x-8">
            <a href="/salas" class="text-sm font-medium text-gray-700 hover:text-blue-600 hover:border-b-2 hover:border-blue-600">Salas</a>
            <a href="/minhas-reservas" class="text-sm font-medium text-gray-700 hover:text-blue-600 hover:border-b-2 hover:border-blue-600">Minhas Reservas</a>
            <a href="/nova-reserva" class="text-sm font-medium text-blue-600 border-b-2 border-blue-600">Nova Reserva</a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Conteúdo Principal -->
  <main class="max-w-3xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Nova Reserva</h1>

    <form action="/reservation/api" method="POST" class="bg-white p-6 rounded-lg shadow-md space-y-6">

      <!-- Sala -->
      <div>
        <label for="sala" class="block text-sm font-medium text-gray-700 mb-1">Sala</label>
        <select id="sala" name="id_classroom" required class="w-full border-gray-300 rounded-md shadow-sm">
          <% salas.forEach(sala => { %>
            <option value="<%= sala.id_classroom %>">
              <%= sala.nome %> - <%= sala.type_classroom %>
            </option>
          <% }); %>
        </select>
      </div>

   
      <!-- Data da Reserva -->
      <div>
        <label for="data_reservation" class="block text-sm font-medium text-gray-700 mb-1">Data da Reserva</label>
        <input type="date" id="data_reservation" name="data_reservation" required class="w-full border-gray-300 rounded-md shadow-sm"/>
      </div>

      <!-- Hora de Início -->
      <div>
        <label for="hora_inicio" class="block text-sm font-medium text-gray-700 mb-1">Hora de Início</label>
        <input type="time" id="hora_inicio" name="hora_inicio" required class="w-full border-gray-300 rounded-md shadow-sm"/>
      </div>

      <!-- Hora de Término -->
      <div>
        <label for="hora_fim" class="block text-sm font-medium text-gray-700 mb-1">Hora de Término</label>
        <input type="time" id="hora_fim" name="hora_fim" required class="w-full border-gray-300 rounded-md shadow-sm"/>
      </div>

      <!-- Botão -->
      <div class="text-right">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-md">
          Reservar
        </button>
      </div>
    </form>
  </main>

  <!-- Rodapé -->
  <footer class="bg-white mt-12">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <div class="text-center text-sm text-gray-500">
        <p>&copy; <%= new Date().getFullYear() %> Sistema de Agendamento de Salas. Todos os direitos reservados.</p>
      </div>
    </div>
  </footer>

</body>
</html>
